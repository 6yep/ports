# Description: CLI tool for spawning and running containers
# URL: https://opencontainers.org/
# Maintainer: cavekid, cavekid at protonmail dot com
# Depends on: libseccomp git go

name=runc
version=v1.2.1
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name-$version; then
		git fetch -q
		git reset --hard $version
	else
		git clone --branch $version https://github.com/opencontainers/$name $name-$version
		cd $name-$version
	fi

	make BUILDTAGS="seccomp"
	make DESTDIR=$PKG PREFIX=/usr install
}

