# Description: CLI tool for spawning and running containers 
# URL: https://github.com/opencontainers/runc
# Maintainer: cavekid, cavekid at protonmail dot com
# Depends on: libseccomp git go

name=runc
version=1.2.1
release=1
source=(https://github.com/opencontainers/${name}/archive/v${version}/${name}-v${version}.tar.gz)

build() {
	mkdir -pv src/github.com/opencontainers
	cd src/github.com/opencontainers
    ln -sf $SRC/$name-$version $name
    cd $name

    export GOPATH=$SRC
    export BUILDTAGS="seccomp"

	make
	make DESTDIR=$PKG PREFIX=/usr install
}
