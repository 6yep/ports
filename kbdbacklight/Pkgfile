# Description: Adjust keyboard backlight brightness using sysfs.
# URL: https://github.com/worldoverride/kbdbacklight
# Maintainer: worldoverride, worldoverride at protonmail dot com

name=kbdbacklight
version=1.2
release=1
source=(https://github.com/worldoverride/${name}/archive/v${version}/${name}-v${version}.tar.gz)

build () {
	cd $name-$version

	make
	make DESTDIR=$PKG PREFIX=/usr install

	chmod 4755 $PKG/usr/bin/$name
}
